<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	<!-- APP INFO -->
	<display-name>polimi-tiw-2020-project</display-name>
	<description>project for TIW 2020-2021</description>
	
	<!-- CONTEXT RESOURCES -->
	<resource-ref>
		<description>TIW primary DB</description>
		<res-ref-name>jdbc/polimiDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<!-- WELCOME FILE LIST-->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<!-- LISTENERS -->
	<listener>
		<listener-class>it.polimi.poliesami.AppInit</listener-class>
	</listener>
	
	<!-- FILTERS -->
	<filter>
		<filter-name>LoginInsideFilter</filter-name>
		<filter-class>it.polimi.poliesami.filter.LoginInside</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginInsideFilter</filter-name>
		<url-pattern>/inside/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>LoginOutsideFilter</filter-name>
		<filter-class>it.polimi.poliesami.filter.LoginOutside</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginOutsideFilter</filter-name>
		<url-pattern>/login/*</url-pattern>
	</filter-mapping>
	
	<!-- SERVLETS -->
	<servlet>
		<servlet-name>LoginService</servlet-name>
		<servlet-class>it.polimi.poliesami.controller.LoginService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginService</servlet-name>
		<url-pattern>/login/LoginService</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>LogoutService</servlet-name>
		<servlet-class>it.polimi.poliesami.controller.LogoutService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutService</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CareerService</servlet-name>
		<servlet-class>it.polimi.poliesami.controller.CareerService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CareerService</servlet-name>
		<url-pattern>/inside/CareerService</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>careerService</param-name>
		<param-value>/inside/CareerService</param-value>
	</context-param>
	
	<!-- PAGES -->
	<servlet>
		<servlet-name>LoginPage</servlet-name>
		<servlet-class>it.polimi.poliesami.view.LoginPage</servlet-class>
		
		<init-param>
			<param-name>templatePath</param-name>
			<param-value>/login/index</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginPage</servlet-name>
		<url-pattern>/login/</url-pattern>
	</servlet-mapping>

	<context-param>
		<param-name>loginPage</param-name>
		<param-value>/login/</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>CareersPage</servlet-name>
		<servlet-class>it.polimi.poliesami.view.CareersPage</servlet-class>
		
		<init-param>
			<param-name>templatePath</param-name>
			<param-value>/inside/careers</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>CareersPage</servlet-name>
		<url-pattern>/inside/careers</url-pattern>
	</servlet-mapping>
	
	<context-param>
		<param-name>careersPage</param-name>
		<param-value>/inside/careers</param-value>
	</context-param>
</web-app>
